# Ruby version checks. Right now just for 1.8
if RUBY_VERSION.to_f == 1.8
  raise "You're running Ruby version '#{RUBY_VERSION}'. "\
        "Dosh requires Ruby 1.9.3 or above."
end

dir = File.dirname(File.expand_path(File.realdirpath(__FILE__)))
require File.expand_path(File.join(dir, '..', 'lib', 'bin.rb'))
